<div class="div__form">
    <h2>Review</h2>
    <form id="review_form" method="post" action="/api/movies/<%= movieID %>/reviews">
        <input type="hidden" name="movieID" value="<%= movieID %>">
        <div class="input__div__name">
            <input type="text" name="reviewer" id="reviewer__name" required>
            <label>Name</label>
        </div>

        <div class="input__div__rating">
            <input type="number" name="rating" id="rating" min="1" max="5" required>
            <label>Rating</label>
        </div>

        <textarea placeholder="Feel free to leave a comment..." name="reviewText" id="review__text"></textarea>

        <button type="submit" class="a a__submit">Submit</button>
    </form>
</div>