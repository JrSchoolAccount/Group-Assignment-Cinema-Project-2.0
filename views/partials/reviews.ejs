<div id="review">
  <form method="post" action="/movies/<%= movie.id %>/reviews">
    <div class="form__group">
      <label for="name">Namn:</label><br>
      <input name="name" placeholder="Ditt namn" required class="name__input">
    </div>
    <div class="form__group">
      <label for="rating">Betyg:</label>
      <input type="number" id="rating" name="rating" min="0" max="5" 
      required placeholder="0-5">
    </div>
    <div class="form__group">
      <label for="comment">Kommenter:</label>
      <textarea name="comment" placeholder="Din kommentar"></textarea>
    </div>
    <input type="hidden" name="movie" value="<%= movie.id %>" id="movieId">
    <div class="form__group">
      <input type="submit" value="Skicka">
    </div>
  </form>
</div>

