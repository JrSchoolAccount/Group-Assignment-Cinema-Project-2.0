<body>
    <%- include('../views/partials/header.ejs') %>
        <img class="background__raining" src="../static/assets/raining-background.jpg"
            alt="raining in the background" />
        <main>
            <div class="div__form">
                <h2>Review</h2>
                <form action="/api/movies/<%= movieID %>/reviews" method="post">
                    <input type="hidden" name="movie_id" value="<%= movieID %>">
                    <div class="input__div__name">
                        <input type="text" name="reviewer_name" id="reviewer__name" required>
                        <label>Name</label>
                    </div>

                    <div class="input__div__rating">
                        <input type="number" name="rating" id="rating" min="1" max="5" required>
                        <label>Rating</label>
                    </div>

                    <textarea placeholder="Comment" name="review_text" id="review__text"></textarea>

                    <button type="submit" onclick="submitReview(event)" class="a a__submit">Submit</button>
                </form>
            </div>
        </main>
        <%- include('../views/partials/footer.ejs') %>

</body>

